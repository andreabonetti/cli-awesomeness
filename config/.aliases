# -----------------------------------------------------------
# aliases for bash
# -----------------------------------------------------------

# list (ls)
alias l='ls --colour=auto'
alias l='ls -l'
alias ll='ls -la'
alias lr='ls -ltr'
alias lh='ls -lh'

# tar
# usage: targz archive-name.tar.gz file-name
# usage: targz archive-name.tar.gz directory-name
alias targz='tar -zcvf'
alias untargz='tar -zxvf'
alias untar='tar -xvf'

# applications
alias sc='screen'

# git
alias gits='git status'
alias gitf='git fetch'
alias gitr='git rebase'
alias gitc='git commit'
alias gitp='git push'
alias gita='git add'
alias giturl='git config --get remote.origin.url'
alias gitls='git ls-files'
alias gitr='git rebase'
alias gitl='git log --stat'
alias gitll='git log -p'
alias gitlll='git log --pretty=oneline'
alias gitlg='git log --graph --oneline --all'
alias gitrs='git rebase ; git submodule update --recursive --init'
alias gitsrp='git stash ; gitrs ; git stash pop ; gits' # use carefully
alias gitstats='git shortlog --summary --numbered --all --no-merges'
alias gitd='git diff'
alias gito='git checkout'
alias git-submodule-update='git submodule update --recursive'
alias git-submodule-init='git submodule update --recursive --init'
alias git-undo-last-commit='git reset --soft HEAD~1'

# svn
alias svns='svn status'
alias svnsv='svn status | grep -v "^     K"' # not showing files that are only locked
alias svnl='svn log -v | less'
alias svnll='svn log | less'

# grep
alias grepw='grep -i "warning"'
alias grepe='grep -i "error"'
alias grepew='grep -i "warning\|error"'

# tmux
alias tmux-new='tmux new -s' # usage: tmux-new mysession
alias tmux-create='tmux new -s' # usage: tmux-create mysession
alias tmux-attach='tmux a -t' # usage: tmux-attach mysession
alias tmux-kill='tmux kill-session -t ' # usage: tmux-kill mysession

# scripts from the CLIA repository
alias gitclonelight='source $PATH_CLIA_SCRIPTS/gitclonelight.bash'

# history
alias h="history | sed 's/.\{7\}//'"
alias hg='h | grep'

# misc
alias ..='cd ..' # change directory
alias clem='rm -f *~' # remove *~ files (e.g., generated by gvim)
alias count='find . -type f | wc -l' # recursively count files
alias cpr='rsync -Pa' # copy with progress
alias kill='kill -9' # kill 'em all
alias bc='bc -l' # bc with real numbers
alias clean_checklist="sed -i '' 's/\[.\]/[ ]/g' " # usage: clean_checklist my_checklist.md

# cliapy
alias add_date='python $PATH_CLIA_SCRIPTS/add_date.py'

# marp
alias marp-html='marp --heml --allow-local-files --theme' # usage: marp-html css/pink.css slides.md
alias marp-pdf='marp --pdf --allow-local-files --theme' # usage: marp-pdf css/pink.css slides.md
alias marp-preview='marp --preview --allow-local-files --theme' # usage: marp-preview css/pink.css slides.md

# ruff
alias ruff-format='ruff format'
alias ruff-check='ruff check'
alias ruff-check-fix='ruff check --fix'
alias ruff-all='ruff format ; ruff check --fix'

# psmem
alias ps-mem='ps -eo pmem,pcpu,pid,command -m'
